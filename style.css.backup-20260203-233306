@charset "UTF-8";
/*
 * 笔者之脑 - UI 样式 v3.0
 * 设计思路:
 * 1. 移动端优先 (Mobile-First)
 * 2. 玻璃拟态 (Glassmorphism) 风格
 * 3. 清晰的显示/隐藏逻辑
 */

/* ============================================================================
   [1] CSS 变量
   ============================================================================ */
:root {
    /* 主色调 */
    --wbap-primary: hsl(231, 70%, 65%);
    --wbap-primary-light: hsl(231, 70%, 75%);
    --wbap-primary-dark: hsl(231, 60%, 55%);
    --wbap-accent: hsl(265, 75%, 70%);

    /* 状态色 */
    --wbap-success: #34d399;
    --wbap-warning: #fbbf24;
    --wbap-danger: #f87171;
    --wbap-danger-dark: #ef4444;

    /* 背景 */
    --wbap-bg-base: hsl(220, 20%, 10%);
    --wbap-bg-panel: hsla(220, 20%, 15%, 0.85);
    --wbap-bg-element: hsla(220, 20%, 20%, 0.8);
    --wbap-bg-element-hover: hsla(220, 20%, 25%, 0.9);
    --wbap-bg-input: hsl(220, 20%, 12%);
    --wbap-bg-secondary: hsl(220, 20%, 18%);

    /* 文本 */
    --wbap-text: #f1f5f9;
    --wbap-text-secondary: #94a3b8;
    --wbap-text-muted: #64748b;
    --wbap-text-on-primary: #ffffff;

    /* 边框 */
    --wbap-border-color: hsla(220, 20%, 30%, 0.4);
    --wbap-border-color-light: hsla(220, 20%, 40%, 0.6);
    --wbap-border-radius-sm: 6px;
    --wbap-border-radius-md: 12px;
    --wbap-border-radius-lg: 16px;

    /* 阴影 */
    --wbap-shadow-sm: 0 1px 2px rgba(0, 0, 0, 0.2);
    --wbap-shadow-md: 0 4px 12px rgba(0, 0, 0, 0.3);
    --wbap-shadow-lg: 0 10px 30px rgba(0, 0, 0, 0.4);

    /* 过渡 */
    --wbap-transition-fast: 0.15s ease-out;
    --wbap-transition-normal: 0.25s ease-in-out;

    /* 字体 */
    --wbap-font-sans: -apple-system, BlinkMacSystemFont, 'Segoe UI', 'Roboto', sans-serif;
    --wbap-font-mono: 'Consolas', 'Monaco', 'Courier New', monospace;
}

